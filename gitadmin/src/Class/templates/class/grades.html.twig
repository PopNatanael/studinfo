{% extends '@layout/default.html.twig' %}

{% block title %}Grades{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body" style="width:40%;margin:auto;text-align:center">
                    <h1 style="margin-right:10%;">Student Grades</h1>
                    <table style="border:1px solid black">
                        <tr style="border:1px solid black">
                            <th style="border:1px solid black"><h3><b> Student </b></h3></th>
                            <th style="border:1px solid black"><h3><b> Year </b></h3></th>
                            <th style="border:1px solid black"><h3><b> Class </b></h3></th>
                            <th style="border:1px solid black"><h3><b> Grade </b></h3></th>
                        </tr>
                        {% for grade in grades %}
                        <tr>
                            <td style="border:1px solid black"> 
                            {{ grade.getStudentId().getName() }} <br>
                            </td>
                            <td style="border:1px solid black"> 
                            {{ grade.getClassId().getYear().getYear() }} <br>
                            </td>
                            <td style="border:1px solid black"> 
                            {{ grade.getClassId().getName() }} <br>
                            </td>
                            <td style="border:1px solid black"> 
                            {{ grade.grade }} <br>
                            </td>
                        </tr
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div><!--/.row-->

{% endblock %}
