{% extends '@layout/default.html.twig' %}

{% block title %}Enroled Classes{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body" style="width:60%;margin:auto;text-align:center">
                    <h2> <b> Your Classes </b> </h2>
                    <div style="">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                <th scope="col">Class</th>
                                <th>Class Year</td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for classes in students %}
                                    <tr>
                                        <td>{{ classes.name }}</td>
                                        <td>{{ year.getYear().getYear() }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/.row-->

{% endblock %}
